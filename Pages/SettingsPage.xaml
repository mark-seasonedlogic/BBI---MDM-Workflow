<Page
    x:Class="BBIHardwareSupport.MDM.IntuneConfigManager.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <StackPanel Padding="30" Spacing="15">
        <TextBlock Text="Settings" FontSize="22" FontWeight="Bold"/>

        <ToggleSwitch Header="Enable Auto-Sync" IsOn="{x:Bind ViewModel.IsAutoSyncEnabled, Mode=TwoWay}"/>
        <Button Content="Save Settings" Command="{x:Bind ViewModel.SaveSettingsCommand}" Width="200"/>
    </StackPanel>
</Page>
