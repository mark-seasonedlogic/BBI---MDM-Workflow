<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BBIHardwareSupport.MDM.IntuneConfigManager.Views.TextEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20" Spacing="10">
            <TextBlock Text="{x:Bind ViewModel.FileName, Mode=OneWay}" FontSize="18" FontWeight="Bold"/>
        <ScrollViewer Height="600" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

            <TextBox x:Name="EditorBox"
                 Text="{x:Bind ViewModel.FileContent, Mode=TwoWay}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="600"/>
        </ScrollViewer>
            <Button Content="Save Changes" Width="200"
                Click="OnSaveClicked"/>

    </StackPanel>
</Page>
