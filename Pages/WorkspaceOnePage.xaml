<Page
    x:Class="BBIHardwareSupport.MDM.IntuneConfigManager.Pages.WorkspaceOnePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:BBIHardwareSupport.MDM.WorkspaceOne.Models"
    xmlns:uimodels="using:BBIHardwareSupport.MDM.IntuneConfigManager.Models"
    xmlns:helpers="using:BBIHardwareSupport.MDM.UI.ViewModels.Helpers"
    xmlns:local="using:BBIHardwareSupport.MDM.IntuneConfigManager.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"

    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Move templates to Page scope -->
        <DataTemplate x:Key="DeviceTemplate" x:DataType="models:WorkspaceOneDevice">
            <StackPanel>
                <TextBlock Text="{x:Bind DeviceFriendlyName}" FontWeight="Bold"/>
                <TextBlock Text="{x:Bind SerialNumber}" FontSize="12"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SmartGroupTemplate" x:DataType="models:WorkspaceOneSmartGroup">
            <StackPanel>
                <TextBlock Text="{x:Bind Name}" FontWeight="Bold"/>
                <TextBlock Text="{x:Bind Platform}" />
                <TextBlock Text="{x:Bind MembershipCriteriaSummary}" FontSize="12" TextWrapping="Wrap"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ProductTemplate" x:DataType="models:WorkspaceOneProduct">
            <StackPanel>
                <TextBlock Text="{x:Bind Name}" />
                <TextBlock Text="{x:Bind Description}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ProfileTemplate" x:DataType="models:WorkspaceOneProfileSummary">
            <StackPanel>
                <TextBlock Text="{x:Bind ProfileName}"  FontWeight="Bold" />
                <TextBlock Text="{x:Bind ProfileType}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="TimeZoneTagReviewTemplate"
              x:DataType="models:TimeZoneTagReviewRow">
            <Grid ColumnDefinitions="Auto,Auto,*,*,*,*"
          Padding="8">
                <!-- Select / Apply -->
                <CheckBox Grid.Column="0"
                  IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                  VerticalAlignment="Center"
                  Margin="0,0,8,0" />

                <!-- Restaurant -->
                <TextBlock Grid.Column="1"
                   Text="{x:Bind RestaurantCode}"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

                <!-- Time Zone -->
                <TextBlock Grid.Column="2"
                   Text="{x:Bind TimeZone}"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

                <!-- Tag Name -->
                <TextBlock Grid.Column="3"
                   Text="{x:Bind TagName}"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

                <!-- Tag Id -->
                <TextBlock Grid.Column="4"
                   Text="{x:Bind TagId}"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center" />

                <!-- Device Id + AlreadyTagged flag -->
                <StackPanel Grid.Column="5"
                    Orientation="Vertical">
                    <TextBlock Text="{x:Bind DeviceId}" />
                    <TextBlock Text="Already tagged"
                       FontSize="12"
                       Opacity="0.7"
                       Visibility="{x:Bind AlreadyTagged, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
            </Grid>
        </DataTemplate>


        <local:WorkspaceOneTemplateSelector
            x:Key="WorkspaceOneTemplateSelector"
            DeviceTemplate="{StaticResource DeviceTemplate}"
            SmartGroupTemplate="{StaticResource SmartGroupTemplate}" 
            ProductTemplate="{StaticResource ProductTemplate}"
            ProfileTemplate="{StaticResource ProfileTemplate}"
            TimeZoneTagReviewTemplate="{StaticResource TimeZoneTagReviewTemplate}"/>
    </Page.Resources>

    <Grid RowDefinitions="Auto,*" Padding="12">

        <!-- Row 0: Tile Buttons -->
        <StackPanel Grid.Row="0">
            <GridView ItemsSource="{Binding UITileItems}" IsItemClickEnabled="False" SelectionMode="None">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="uimodels:UITileItem">
                        <Button Command="{x:Bind ExecuteCommand}" Margin="8" BorderThickness="0">
                            <Border Background="#FFF" CornerRadius="12" Padding="16" BorderBrush="#DDD" BorderThickness="1">
                                <StackPanel HorizontalAlignment="Center" Width="220">
                                    <Image Source="{x:Bind ImagePath}" Width="48" Height="48" Margin="0,0,0,12"/>
                                    <TextBlock Text="{x:Bind Title}" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="WrapWholeWords"/>
                                    <TextBlock Text="{x:Bind Description}" TextWrapping="Wrap" TextAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>

        <!-- Row 1: Progress + Dynamic ListView for Templated Data -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">

            <!-- Header row for Time Zone Review (hidden for other views) -->
            <Grid Grid.Row="0"
      Margin="0,0,0,4"
      Visibility="{Binding IsTimeZoneReviewView,
                           Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Select/Deselect row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Column headers row -->
                </Grid.RowDefinitions>

                <!-- Match the item template: Auto,Auto,*,*,*,* -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Select column -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Restaurant -->
                    <ColumnDefinition Width="*"/>
                    <!-- Time Zone -->
                    <ColumnDefinition Width="*"/>
                    <!-- Tag Name -->
                    <ColumnDefinition Width="*"/>
                    <!-- Tag Id -->
                    <ColumnDefinition Width="*"/>
                    <!-- Device Id -->
                </Grid.ColumnDefinitions>

                <!-- Row 0: Select/Deselect All spanning all columns -->
                <StackPanel Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="6"
                Orientation="Horizontal"
                Spacing="8">
                    <Button Content="Select All"
                Command="{x:Bind _viewModel.SelectAllTimeZoneRowsCommand}"/>
                    <Button Content="Deselect All"
                Command="{x:Bind _viewModel.DeselectAllTimeZoneRowsCommand}"/>
                </StackPanel>

                <!-- Row 1: column headers aligned over each column -->

                <!-- Optional header for select column (could be empty or an icon) -->
                <TextBlock Grid.Row="1"
               Grid.Column="0"
               Text=""
               Width="30"/>

                <Button Grid.Row="1"
            Grid.Column="2"
            Content="Restaurant"
            Command="{x:Bind _viewModel.SortTimeZoneByRestaurantCommand}"
            HorizontalAlignment="Left"/>

                <Button Grid.Row="1"
            Grid.Column="3"
            Content="Time Zone"
            Command="{x:Bind _viewModel.SortTimeZoneByTimeZoneCommand}"
            HorizontalAlignment="Left"/>

                <Button Grid.Row="1"
            Grid.Column="4"
            Content="Tag Name"
            Command="{x:Bind _viewModel.SortTimeZoneByTagNameCommand}"
            HorizontalAlignment="Left"/>

                <Button Grid.Row="1"
            Grid.Column="5"
            Content="Tag Id"
            Command="{x:Bind _viewModel.SortTimeZoneByTagIdCommand}"
            HorizontalAlignment="Left"/>

                <Button Grid.Row="1"
            Grid.Column="6"
            Content="Device Id"
            Command="{x:Bind _viewModel.SortTimeZoneByDeviceIdCommand}"
            HorizontalAlignment="Left"/>
            </Grid>
            <!--            <TextBlock Grid.Row="1"
           Text="{x:Bind _viewModel.IsTimeZoneReviewView, Mode=OneWay}"
           Foreground="Red"/>
-->
            <!-- Actual list -->
            <ListView Grid.Row="1"
              ItemsSource="{x:Bind _viewModel.DisplayedItems, Mode=OneWay}"
              x:Name="WorkspaceOneDeviceListView"
              ItemTemplateSelector="{StaticResource WorkspaceOneTemplateSelector}"
              RightTapped="WorkspaceOneDeviceListView_RightTapped" />
        </Grid>

    </Grid>
</Page>
