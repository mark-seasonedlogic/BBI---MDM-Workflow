<Page
    x:Class="BBIHardwareSupport.MDM.IntuneConfigManager.Views.GitManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BBIHardwareSupport.MDM.IntuneConfigManager.Views"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <StackPanel Padding="30" Spacing="15">
        <TextBlock Text="Intune Repository Manager" FontSize="22" FontWeight="Bold"/>

        <TextBlock Text="Release Name:" FontWeight="Bold"/>
        <TextBox Width="300" Text="{x:Bind ViewModel.RepositoryRootPath, Mode=TwoWay}" PlaceholderText="feature/new-branch"/>
        <Button Content="Create Branch" Click="CreateBranchButton_Click" Width="200"/>

        <Button Content="Commit Changes" Command="{x:Bind ViewModel.CommitChangesCommand}" Width="200"/>
        <Button Content="View Diff" Command="{x:Bind ViewModel.GetDiffCommand}" Width="200"/>
    </StackPanel>
</Page>
